{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "module": "commonjs",
		"declaration": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
		"noImplicitReturns": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "outDir": "dist",
    "lib": [
      "es5",
      "es2015.promise"
    ],
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/"
    ],
		"paths" : {
      "@src/*": ["./src/*"]
    }
  },
	"typedocOptions": {
		"entryPoints": ["src/index.ts"],
		"out": "docs"
	},
  "include": [".eslintrc.js", "src/**/*"],
  "exclude": ["node_modules"]
}
